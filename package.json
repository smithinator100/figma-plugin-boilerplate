{
  "name": "figma-plugin-boilerplate",
  "version": "1.0.0",
  "description": "A lightweight boilerplate for creating Figma plugins with React, TypeScript, and shadcn/ui",
  "main": "dist/code.js",
  "scripts": {
    "build": "npm run build:ui && npm run build:main",
    "build:main": "tsc --outDir dist",
    "build:ui": "vite build",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:ui\"",
    "dev:main": "tsc --watch --outDir dist",
    "dev:ui": "vite build --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit && tsc --noEmit -p tsconfig.ui.json",
    "setup": "npm install && npm run build"
  },
  "keywords": [
    "figma",
    "plugin",
    "react",
    "typescript",
    "shadcn",
    "tailwind",
    "vite"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@figma/plugin-typings": "^1.90.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "html-inline-script-webpack-plugin": "^3.2.1",
    "html-webpack-plugin": "^5.6.0",
    "lucide-react": "^0.315.0",
    "postcss": "^8.4.33",
    "rimraf": "^5.0.5",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-singlefile": "^0.13.5"
  },
  "dependencies": {
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
